<ol role="list" class="h-feed hfeed | flow | gap-large">
  {% for post in posts %}
  <li class="h-entry hentry | switcher | border tertiary-text">
    <div class="horizontal">
      {% assign postNumber = forloop.length | minus: forloop.index | plus: 1 %}
      <p>N&ordm; {{ postNumber }}</p>
      <p>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </p>
    </div>
    <div class="switcher-aside | horizontal">
      <p><span class="tag">{{ post.data.type | default: "Post" }}</span></p>
      <p class="push-right">{{ post.data.date | date_to_string }}</p>
    </div>
  </li>
  {% endfor %}
</ol>
