<ol role="list" class="index | flow | gap-large">
  {% for post in posts %}
  <li class="post | horizontal" data-responsive>
    <a href="{{ post.url }}">
      {{ post.data.title }}
    </a>
    <hr class="grow" />
    <p class="horizontal | tertiary-text">
      <span class="tag">{{ post.data.type if post.data.type else "Post" }}</span>
      <span>{{ post.data.date | formatDate }}</span>
    </p>
  </li>
  {% endfor %}
</ol>
