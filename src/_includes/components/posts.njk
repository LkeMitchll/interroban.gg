<ol role="list" class="flow | gap-large">
  {% for post in posts %}
  <li class="post | switcher | border tertiary-text">
    <p>N&ordm; {{ loop.revindex }}</p>
    <p>
      <a href="{{ post.url }}">
        {{ post.data.title }}
      </a>
    </p>
    <div class="horizontal">
      <p><span class="tag">{{ post.data.type if post.data.type else "Post" }}</span></p>
      <p class="push-right">{{ post.data.date | formatDate }}</p>
    </div>
  </li>
  {% endfor %}
</ol>
