<ol role="list" class="flow | gap-large">
  {% for post in posts %}
  <li class="post | horizontal">
    <p>
      <a href="{{ post.url }}">
        {{ post.data.title }}
      </a>
    </p>
    <hr class="grow" />
    <p class="tertiary-text">
      <span class="tag">{{ post.data.type if post.data.type else "Post" }}</span>
      <span>{{ post.data.date | formatDate }}</span>
    </p>
  </li>
  {% endfor %}
</ol>
