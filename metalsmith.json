{
  "source": "./src",
  "destination": "./dist",
  "ignore": "css",
  "plugins": {
    "metalsmith-assets": {
      "source": "./assets"
    },
    "metalsmith-fingerprint": {
      "pattern": ["site.css", "site.js"]
    },
    "metalsmith-markdown": {
      "gfm": true,
      "breaks": true,
      "smartypants": true
    },
    "metalsmith-layouts": {
      "engine": "handlebars"
    },
    "metalsmith-babel": {
      "presets": [
        "es2015"
      ],
      "minified": true
    },
    "metalsmith-postcss": {
      "plugins": {
        "postcss-import": {},
        "postcss-cssnext": {},
        "postcss-clean": {}
      }
    }
  }
}
