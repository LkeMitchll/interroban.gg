{
  "source": "./src",
  "destination": "./dist",
  "ignore": "css",
  "plugins": {
    "metalsmith-markdown": {
      "gfm": true,
      "breaks": true,
      "smartypants": true
    },
    "metalsmith-layouts": {
      "engine": "handlebars"
    },
    "metalsmith-uglify": {
      "sameName": true,
      "uglify": {
        "sourceMap": false
      }
    },
    "metalsmith-postcss": {
      "plugins": {
        "postcss-import": {},
        "postcss-cssnext": {},
        "postcss-clean": {}
      }
    }
  }
}
