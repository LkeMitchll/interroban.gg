---
layout: layout.njk
title: Product Designer
---

{% set page = pages | findByID("3PVdf7SKLVY2peVTFh0ft") %}
{% set recentBookmarks = bookmarks | limit(3) %}
{% set recentPosts = posts | limit(3) %}

<header class="hero | grid fifty-fifty" >
  <section class="flow">
    <h2>Welcome</h2>
  </section>
  <section class="measure flow" style="--flow-space: var(--space-x-large)">
    {% renderMarkdown page.fields.descriptionMarkdown %}
    <div>
      {% include "_includes/site_index.njk" %}
    </div>
  </section>
</header>

<article class="grid fifty-fifty">
  <section class="gap-xx-large">
    <h2>Recent Posts</h2>
    <ol class="flow gap-large" data-plain>
      {% for post in recentPosts %}
      <li>
        <a
          href="/post/{{ post.fields.slug }}/"
          aria-label="Post: {{ post.fields.title }}"
        >
          {{ post.fields.title }}
        </a>
        <p class="color-secondary">
          <span class="visually-hidden">Published:</span>
          <em>{{ post.fields.date | formatDate }}</em>
        </p>
      </li>
      {% endfor %}
    </ol>
    <footer>
      <a href="/journal" class="link">See all Posts</a>
    </footer>
  </section>
  <section class="gap-xx-large">
    <h2>Recent Bookmarks</h2>
    <ol class="flow gap-large" data-plain>
      {% for bookmark in recentBookmarks %}
      <li>
        <a
          href="{{ bookmark.fields.url }}"
          target="_blank"
          rel="noreferrer"
          aria-label="Bookmark: {{ bookmark.fields.title }}"
        >
          {{ bookmark.fields.title }}
        </a>
        <p class="color-secondary">
          <span class="visually-hidden">Type:</span>
          <em>{{ bookmark.fields.tag }}</em>
        </p>
      </li>
      {% endfor %}
    </ol>
    <footer>
      <a href="/bookmarks" class="link">See all Bookmarks</a>
    </footer>
  </section>
</article>
