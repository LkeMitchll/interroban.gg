{
  "name": "interroban.gg",
  "version": "2.0.0",
  "license": "GPL-3.0",
  "description": "Personal website of Luke Mitchell",
  "repository": {
    "type": "git",
    "url": "https://github.com/LkeMitchll/interroban.gg.git"
  },
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn run clean && node metalsmith.js",
    "start": "metalsmith-start",
    "update": "git submodule init && git submodule update --remote",
    "cms": "open https://github.com/LkeMitchll/interroban.gg/blob/master/src/index.md",
    "lint": "stylelint  src/*.css src/css/**/*",
    "docker:build": "docker build -t interrobang .",
    "docker:start": "docker run -d -p 1337:5000 --name interrobang interrobang && open http://localhost:1337",
    "docker:stop": "docker stop interrobang && docker rm interrobang"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30000810",
    "clean-css": "^4.1.9",
    "handlebars": "^4.0.10",
    "markdown-it-abbr": "^1.0.4",
    "metalsmith": "^2.3.0",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-clean-css": "^6.0.0",
    "metalsmith-inline-css": "^1.0.2",
    "metalsmith-layouts": "^1.8.1",
    "metalsmith-markdownit": "^0.4.0",
    "metalsmith-postcss": "^4.1.0",
    "metalsmith-start": "^2.0.1",
    "postcss": "^6.0.19",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0"
  },
  "devDependencies": {
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0"
  }
}
