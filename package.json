{
  "name": "interroban.gg",
  "version": "4.5.0",
  "description": "Personal site, blog, and portfolio of Luke Mitchell, a design director, product designer, and UI developer.",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^2.0.0-beta.1",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "dotenv": "^16.0.3",
    "markdown-it": "^13.0.1",
    "markdown-it-external-links": "^0.0.6",
    "sass": "^1.57.1",
    "simple-git": "^3.16.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "eslint": "^8.23.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "global-require": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "scripts": {
    "clean": "rm -rf _site .cache",
    "start": "npm run build:eleventy -- --serve --incremental --quiet & npm run build:css -- --watch",
    "build": "npm run build:eleventy && npm run build:css",
    "build:eleventy": "npx @11ty/eleventy",
    "build:css": "sass --style=compressed src/site.scss:_site/site.css",
    "test": "npm run lint:stylelint & npm run lint:eslint",
    "lint:stylelint": "stylelint ./src/**/*.css",
    "lint:eslint": "eslint ./**/*.js"
  }
}
