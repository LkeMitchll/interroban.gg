{
  "name": "interroban.gg",
  "version": "4.5.0",
  "description": "Personal site, blog, and portfolio of Luke Mitchell, a design director, product designer, and UI developer.",
  "private": true,
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "3.0.0-alpha.4",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11tyrocks/eleventy-plugin-lightningcss": "^1.2.0",
    "@netlify/functions": "^2.4.1",
    "dotenv": "^16.3.1",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "simple-git": "^3.22.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "global-require": 0,
      "import/extensions": [ "error", "ignorePackages", { "js": "always" } ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": [ "./**/*.js" ]
  },
  "scripts": {
    "clean": "rm -rf _site .cache",
    "start": "npm run build -- --serve --quiet",
    "build": "npx @11ty/eleventy",
    "test": "npm run lint:stylelint & npm run lint:eslint",
    "lint:stylelint": "stylelint ./src/**/*.css",
    "lint:eslint": "eslint ./src/**/*.js"
  }
}
