{
  "name": "interroban.gg",
  "version": "2.0.0",
  "license": "GPL-3.0",
  "description": "Personal website of Luke Mitchell",
  "repository": {
    "type": "git",
    "url": "https://github.com/LkeMitchll/interroban.gg.git"
  },
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn run clean && yarn run lint && metalsmith",
    "start": "metalsmith-start",
    "update": "git submodule init && git submodule update --remote",
    "cms": "open https://github.com/LkeMitchll/interroban.gg/blob/master/src/index.md",
    "lint": "stylelint  src/*.css src/css/**/*"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "handlebars": "^4.0.10",
    "metalsmith": "^2.3.0",
    "metalsmith-babel": "^4.1.0",
    "metalsmith-layouts": "^1.8.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-postcss": "^4.1.0",
    "metalsmith-start": "^2.0.1",
    "postcss-clean": "^1.0.3",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "max-nesting-depth": 2
    }
  }
}
